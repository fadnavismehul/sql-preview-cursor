{
  "name": "sql-preview",
  "displayName": "SQL Preview",
  "description": "Run SQL queries directly from VS Code with tabbed results",
  "version": "0.0.1",
  "publisher": "mehulfadnavis",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],

      "activationEvents": [
      "onLanguage:sql",
      "onCommand:sql.runCursorQuery",
      "onView:sqlResultsView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sql.runCursorQuery",
        "title": "SQL Preview: Run Query Under Cursor"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "sqlResultsContainer",
          "title": "SQL Preview",
          "icon": "media/table.svg"
        }
      ]
    },
    "views": {
      "sqlResultsContainer": [
        {
          "id": "sqlResultsView",
          "name": "Results",
          "type": "webview",
          "contextualTitle": "SQL Preview Results"
        }
      ]
    },
    "configuration": {
      "title": "SQL Preview",
      "properties": {
        "sqlPreview.host": {
          "type": "string",
          "default": "localhost",
          "description": "Database server host."
        },
        "sqlPreview.port": {
          "type": "number",
          "default": 8080,
          "description": "Database server port."
        },
        "sqlPreview.user": {
          "type": "string",
          "default": "user",
          "description": "Username for database connection."
        },
        "sqlPreview.catalog": {
          "type": "string",
          "default": "",
          "description": "Default database catalog."
        },
        "sqlPreview.schema": {
          "type": "string",
          "default": "",
          "description": "Default database schema."
        },
        "sqlPreview.password": {
          "type": "string",
          "default": "",
          "description": "Password for database connection (if using password auth). Leave empty if not needed.",
          "markdownDescription": "Password for database connection (if using password auth). **Leave empty** if not needed or using other authentication methods."
        },
        "sqlPreview.ssl": {
          "type": "boolean",
          "default": false,
          "description": "Enable SSL/TLS for the connection."
        },
        "sqlPreview.sslVerify": {
          "type": "boolean",
          "default": true,
          "description": "Verify the server's SSL certificate. Set to false for self-signed certificates (less secure)."
        },
        "sqlPreview.maxRowsToDisplay": {
          "type": "number",
          "default": 500,
          "description": "Maximum number of rows to display in the results grid. Full results can be exported.",
          "minimum": 1
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "lint": "eslint src --ext ts",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run esbuild-base -- --minify",
    "build-dev": "npm run esbuild-base -- --sourcemap",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:integration": "node ./out/test/runTest.js",
    "pretest": "npm run compile && npm run lint",
    "test:all": "npm run test && npm run test:integration"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.5.1",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "glob": "^11.0.1",
    "jest": "^29.7.0",
    "mocha": "^11.1.0",
    "sinon": "^20.0.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "ag-grid-community": "^31.3.2",
    "axios": "^1.8.4",
    "trino-client": "^0.2.6"
  }
}
