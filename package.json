{
  "name": "sql-preview",
  "displayName": "SQL Preview",
  "description": "Run SQL queries directly from VS Code with tabbed results",
  "version": "0.1.3",
  "publisher": "mehul",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/fadnavismehul/sql-preview-cursor"
  },
  "homepage": "https://github.com/fadnavismehul/sql-preview-cursor#readme",
  "bugs": {
    "url": "https://github.com/fadnavismehul/sql-preview-cursor/issues"
  },
  "keywords": [
    "sql",
    "presto",
    "trino",
    "database",
    "query",
    "data",
    "analytics",
    "results",
    "viewer"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Data Science",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sql"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sql.runCursorQuery",
        "title": "SQL Preview: Run Query Under Cursor"
      },
      {
        "command": "sql.setPassword",
        "title": "SQL Preview: Set Database Password"
      },
      {
        "command": "sql.clearPassword",
        "title": "SQL Preview: Clear Stored Password"
      },
      {
        "command": "sql.setPasswordFromSettings",
        "title": "Set Password",
        "icon": "$(key)"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "sqlResultsContainer",
          "title": "SQL Preview",
          "icon": "media/table.svg"
        }
      ]
    },
    "views": {
      "sqlResultsContainer": [
        {
          "id": "sqlResultsView",
          "name": "Results",
          "type": "webview",
          "contextualTitle": "SQL Preview Results"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "sql.setPasswordFromSettings",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "sql.runCursorQuery",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == sql"
      }
    ],
    "configuration": {
      "title": "SQL Preview",
      "properties": {
        "sqlPreview.host": {
          "type": "string",
          "default": "localhost",
          "description": "Database server host."
        },
        "sqlPreview.port": {
          "type": "number",
          "default": 443,
          "description": "Database server port."
        },
        "sqlPreview.user": {
          "type": "string",
          "default": "user",
          "description": "Username for database connection."
        },
        "sqlPreview.catalog": {
          "type": "string",
          "default": "",
          "description": "Default database catalog."
        },
        "sqlPreview.schema": {
          "type": "string",
          "default": "",
          "description": "Default database schema."
        },
        "sqlPreview.password": {
          "type": "string",
          "default": "",
          "description": "Click 'Set Password' to securely store your database password. This field shows whether a password is stored.",
          "markdownDescription": "**Secure Password Management**: Click the 'Set Password' button or use Command Palette â†’ `SQL Preview: Set Database Password` to store your password securely. This field will show `[Password Set]` when configured.",
          "editPresentation": "singlelineText",
          "scope": "application"
        },
        "sqlPreview.ssl": {
          "type": "boolean",
          "default": false,
          "description": "Enable SSL/TLS for the connection."
        },
        "sqlPreview.sslVerify": {
          "type": "boolean",
          "default": true,
          "description": "Verify the server's SSL certificate. Set to false for self-signed certificates (less secure)."
        },
        "sqlPreview.maxRowsToDisplay": {
          "type": "number",
          "default": 500,
          "description": "Maximum number of rows to display in the results grid. Full results can be exported.",
          "minimum": 1
        },
        "sqlPreview.fontSize": {
          "type": "number",
          "default": 0,
          "description": "Font size for the results view in pixels. Set to 0 to inherit from VS Code editor font size.",
          "minimum": 0,
          "maximum": 32
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run esbuild-base -- --minify",
    "build-dev": "npm run esbuild-base -- --sourcemap",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:integration": "node ./out/test/runTest.js",
    "pretest": "npm run quality-check",
    "test:all": "npm run test && npm run test:integration",
    "quality-check": "npm run type-check && npm run lint && npm run format:check",
    "quality-fix": "npm run lint:fix && npm run format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.5.1",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.3",
    "glob": "^11.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "mocha": "^11.1.0",
    "prettier": "^3.6.2",
    "sinon": "^20.0.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "ag-grid-community": "^31.3.2",
    "axios": "^1.8.4",
    "trino-client": "^0.2.6"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
